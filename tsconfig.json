{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["es6", "es2017"],
    "importHelpers": false,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "outDir": "./lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "diagnostics": true,
    "listFiles": false,
    "pretty": true,
    "noEmitOnError": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "types/*.d.ts"
  ],
  "exclude": []
}
